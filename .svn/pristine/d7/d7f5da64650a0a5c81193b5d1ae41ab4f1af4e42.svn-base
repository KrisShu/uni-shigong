<!-- LockButton.vue -->
<template>
    <button :style="style" class="lock-button" :disabled="loading" :loading="loading" @click="run">
        <slot>
            {{ loading ? '处理中...' : '保存' }}
        </slot>
    </button>
</template>

<script setup>
    import { useLock } from '@/hooks/useLock';

    const props = defineProps({
        onClick: {
            type: Function,
            default: () => Promise.resolve(),
        },
        isDisable: {
            type: Boolean,
            default: false,
        },
        style: {
            type: Object,
            default: () => ({
                backgroundColor: '#F7931E',
                color: '#fff',
                border: 'none',
                height: '88rpx',
                borderRadius: '24rpx',
                lineHeight: '88rpx',
            }),
        },
    });

    const { loading, run } = useLock(props.onClick);

    console.log('loading2222=====', loading);
</script>

<style lang="scss" scoped>
    .lock-button {
        &::after {
            border: none;
        }
        // background-color: #007aff;
        border-radius: 0;
        line-height: normal;
        padding: 0;
        font-size: 32rpx;
    }
</style>
